    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
    <script>
        var chart;
        var isFirst = true;
        var result = {
            labels: [],
            datasets: []
        }

        function getDifferColor(j) {
            var result = 'rgba(' + parseInt(Math.random() * 255) + ',' + parseInt(Math.random() * 255) + ',' + parseInt(Math.random() * 255) + ',0.5)';
            return result;
        }

        function modifyData(data) {
            // let count = 0;
            // for (var c in data[0]) {
            //     count = count + 1;
            // }
            // console.log(count);
            if (isFirst) {
                isFirst = false;
                for (var j = 1; j < 37; j++) {
                    result.datasets.push({
                        label: 'Tham' + j,
                        backgroundColor: 'rgba(255, 255, 255, 0)',
                        borderColor: getDifferColor(j),
                        data: []
                    })
                }
            } else {
                result.labels = [];
                for (var j = 1; j < 37; j++) {
                    result.datasets[j - 1].data = [];
                }
            }
            var newData = [];
            for (var i = 0; i < data.length; i++) {
                result.labels.push(data[i].Timestamp);
                for (var j = 1; j < 37; j++) {
                    result.datasets[j - 1].data.push(data[i]['Tham' + j]);
                }
            }
            return result;
        }

        $(document).ready(function() {
            $(document).on('change', '#section', function() {
                $.get("http://localhost:3000/api/selectType_quanTracTham", function(data) {
                    console.log(data.data);
                    var section = $('#section').val();
                    console.log(section);
                    var options = '<option value="0">Tất cả</option>';
                    $(data.data).each(function(index, value) {
                        if (value.Section == section) {
                            options += '<option value="' + value.Serial_Number + '">' + value.Serial_Number + '</option>';
                        }
                    });
                    $('#serialNum').html(options);
                });
            });
            $("#submitSelect").on('click', function() {
                if (chart != undefined) {
                    chart.destroy();
                }
                let serialNum = $('#serialNum').val();
                let section = $("#section").val();
                let startDay = $("#startDay").val();
                let endDay = $("#endDay").val();
                console.log("section: " + $("#section").val());
                console.log("start: " + $("#startDay").val());
                console.log("end: " + $("#endDay").val());
                console.log("serial: " + $("#serialNum").val());
                if (section == '0' && serialNum == '0' && startDay == '' && endDay == '') {
                    $.ajax({
                        cache: false,
                        url: "http://localhost:3000/api/quanTracTham_tatCa",
                        type: "GET",
                        success: function(data) {

                            if (!data.data.recordset) return;
                            try {
                                data.data.recordset = JSON.parse(data.data.recordset);
                            } catch (e) {}
                            var newData = modifyData(data.data.recordset)
                            console.log(newData);
                            var ctx = $("#chartContainer_LunSau");
                            chart = new Chart(ctx, {
                                animation: false,
                                type: 'line',
                                data: newData,
                                options: {
                                    animation: {
                                        duration: 0
                                    }
                                }
                            });
                        },
                        error: function(data) {
                            console.log(data);
                        }
                    });

                } else if (serialNum == '0') {
                    $("#chartContainer_LunSau").removeData();
                    $.ajax({
                        cache: false,
                        url: "http://localhost:3000/api/option_quanTracTham_tuyen",
                        type: "POST",
                        data: {
                            section: section,
                            startDay: startDay,
                            endDay: endDay
                        },
                        success: function(data) {
                            console.log(data);
                            if (!data.data.recordset) return;
                            try {
                                data.data.recordset = JSONd.parse(data.data.recordset);
                            } catch (e) {}
                            var newData = modifyData(data.data.recordset)
                            console.log(newData);
                            var ctx = $("#chartContainer_LunSau");
                            chart = new Chart(ctx, {
                                animation: false,
                                type: 'line',
                                data: newData,
                                options: {
                                    animation: {
                                        duration: 0
                                    }
                                }
                            });
                        },
                        error: function(error) {
                            console.log(error);
                        }
                    });

                } else {
                    $.ajax({
                        cache: false,
                        url: "http://localhost:3000/api/option_quanTracTham",
                        type: "POST",
                        data: {
                            section: $("#section").val(),
                            serialNum: $("#serialNum").val(),
                            startDay: $("#startDay").val(),
                            endDay: $("#endDay").val()
                        },
                        success: function(data) {
                            console.log(data);
                            if (!data.data.recordset) return;
                            try {
                                data.data.recordset = JSONd.parse(data.data.recordset);
                            } catch (e) {}
                            var newData = modifyData(data.data.recordset)
                            console.log(newData);
                            var ctx = $("#chartContainer_LunSau");
                            chart = new Chart(ctx, {
                                animation: false,
                                type: 'line',
                                data: newData,
                                options: {
                                    animation: {
                                        duration: 0
                                    }
                                }
                            });
                        },
                        error: function(error) {
                            console.log(error);
                        }
                    });
                }
            });
        });
        (function() {
            $.ajax({
                url: "http://localhost:3000/api/quanTracTham_tatCa",
                type: "GET",
                success: function(data) {
                    console.log(data);
                    if (!data.data.recordset) return;
                    try {
                        data.data.recordset = JSON.parse(data.data.recordset);
                    } catch (e) {}
                    var newData = modifyData(data.data.recordset)
                    console.log(newData);
                    var ctx = $("#chartContainer_LunSau");
                    chart = new Chart(ctx, {
                        animation: false,
                        type: 'line',
                        data: newData,
                        options: {
                            animation: {
                                duration: 0
                            }
                        }
                    });
                },
                error: function(error) {
                    console.log(error);
                }
            });

        })();
    </script>
